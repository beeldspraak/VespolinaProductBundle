{% if type is not defined %}
    {% set type = 'thumbnail' %}
{% endif %}

{% if product.findAsset(type) %}
    <img class="v-media-item" src="{{ asset( product.findAsset(type).filename ) }}"/>
{%  else %}
    <img class="thumbs" src="{{ asset('bundles/vespolinaproduct/images/no-product-image.jpg') }}"/>
{%  endif %}
